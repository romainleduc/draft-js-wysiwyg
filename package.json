{
  "name": "draft-js-wysiwyg",
  "private": true,
  "description": "A wysiwyg using DraftJS.",
  "version": "1.0.7",
  "keywords": [
    "draftjs",
    "editor",
    "react",
    "richtext",
    "material-ui"
  ],
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "webpack": "webpack",
    "dev": "npm run webpack -- --mode development --watch",
    "build": "npm run webpack -- --mode production",
    "build-types": "tsc -d --emitDeclarationOnly --outDir types",
    "format": "eslint --ext tsx --ext ts src --fix",
    "lint": "eslint --ext tsx --ext ts src && tsc --noEmit",
    "docs:dev": "yarn workspace docs dev",
    "docs:format": "eslint --ext tsx --ext ts docs --fix",
    "docs:lint": "eslint --ext tsx --ext ts docs && tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KiziKr/draft-js-wysiwyg.git"
  },
  "author": "Romain Leduc <KiziKr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KiziKr/draft-js-wysiwyg/issues"
  },
  "homepage": "https://github.com/KiziKr/draft-js-wysiwyg#readme",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@types/draft-js": "^0.10.44",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^5.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mini-css-extract-plugin": "^1.2.1",
    "path": "^0.12.7",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^16.14.0",
    "typescript": "^4.0.5",
    "webpack": "^4.44.1",
    "webpack-cli": "^4.0.0"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/icons": "^4.9.1",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "publishConfig": {
    "directory": "lib"
  },
  "dependencies": {
    "@types/draftjs-to-html": "^0.8.0",
    "clsx": "^1.1.1",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "prop-types": "^15.7.2",
    "terser-webpack-plugin": "^4.2.2"
  },
  "workspaces": [
    "docs"
  ]
}
